# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/qflood
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-access-key-here
MINIO_SECRET_KEY=your-secret-key-here
MINIO_BUCKET_NAME=qflood-data
MINIO_SECURE=false

# API Configuration
API_KEY=your-secure-api-key-here
SECRET_KEY=your-jwt-secret-key-at-least-32-chars
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Quantum Computing Settings
QUANTUM_BACKEND=aer_simulator
QUANTUM_SHOTS=1000
ENABLE_QUANTUM_FALLBACK=true
MAX_QUBITS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/qflood.log

# Environment
ENVIRONMENT=development
